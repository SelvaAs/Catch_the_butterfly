<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/kullanicilinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kullaniciAdi"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/isikli_fon">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/griffy"
            android:gravity="center"
            android:text="Lets Catch The Butterfly"
            android:textColor="#F4430B"
            android:textSize="40sp"
            />


    </LinearLayout>


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/kelebk"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/please_enter_your_username"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="#A029B5"
        android:fontFamily="@font/baloo"
        />
    <EditText
        android:id="@+id/editTextKullaniciAdi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/black"/>

        <Button
            android:id="@+id/buttonStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:backgroundTint="#FB0E5F"/>


</LinearLayout>