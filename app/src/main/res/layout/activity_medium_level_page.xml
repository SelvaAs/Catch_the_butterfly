<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mediumLevelPage"
    android:background="#B6E6FB"
    android:padding="10dp"
   >
    <LinearLayout
        android:id="@+id/anaResim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/mnz3" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="Time : 10 sn"
            android:textColor="@color/purple_500"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

        <GridLayout
            android:id="@+id/GridLayout"
            android:layout_width="300dp"
            android:layout_height="320dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_column="0"
                android:onClick="increaseScore"
                android:src="@drawable/kelebk" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_row="1"
                android:layout_column="0"
                android:onClick="increaseScore"
                android:src="@drawable/kelebk" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_row="2"
                android:layout_column="0"
                android:onClick="increaseScore"
                android:src="@drawable/kelebk" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_row="3"
                android:layout_column="0"
                android:onClick="increaseScore"
                android:src="@drawable/kelebk" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_column="1"
                android:onClick="increaseScore"
                android:src="@drawable/kelebk" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_row="1"
                android:layout_column="1"
                android:onClick="increaseScore"
                android:src="@drawable/kelebk" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_row="2"
                android:layout_column="1"
                android:onClick="increaseScore"
                android:src="@drawable/kelebk" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_row="3"
                android:layout_column="1"
                android:onClick="increaseScore"
                android:src="@drawable/kelebk" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_column="2"
                android:onClick="increaseScore"
                android:src="@drawable/kelebk" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_row="1"
                android:layout_column="2"
                android:onClick="increaseScore"
                android:src="@drawable/kelebk" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_row="2"
                android:layout_column="2"
                android:onClick="increaseScore"
                android:src="@drawable/kelebk" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_row="3"
                android:layout_column="2"
                android:onClick="increaseScore"
                android:src="@drawable/kelebk" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_column="4"
                android:onClick="increaseScore"
                android:src="@drawable/kelebk" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_row="1"
                android:layout_column="4"
                android:onClick="increaseScore"
                android:src="@drawable/kelebk" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_row="2"
                android:layout_column="4"
                android:onClick="increaseScore"
                android:src="@drawable/kelebk" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_column="3"
                android:onClick="increaseScore"
                android:src="@drawable/kelebk" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_row="1"
                android:layout_column="3"
                android:onClick="increaseScore"
                android:src="@drawable/kelebk" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_row="2"
                android:layout_column="3"
                android:onClick="increaseScore"
                android:src="@drawable/kelebk" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_row="3"
                android:layout_column="3"
                android:onClick="increaseScore"
                android:src="@drawable/kelebk" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_row="3"
                android:layout_column="4"
                android:onClick="increaseScore"
                android:src="@drawable/kelebk" />

        </GridLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/ScoreLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/anaResim"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/score_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/kelebk"

            />

        <TextView
            android:id="@+id/textViewScore"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text=": 0"
            android:textSize="25sp" />

    </LinearLayout>




</RelativeLayout>

