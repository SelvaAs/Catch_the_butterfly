<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".girisSayfasi"
    android:orientation="vertical"
    android:background="#B6E6FB">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/mnz3"
        />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/griffy"
        android:gravity="center"
        android:text="Lets Catch The Butterfly"
        android:textColor="#F4430B"
        android:textSize="50sp"
        />


</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:gravity="center">

            <ImageView
                android:id="@+id/kelebekTikla"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/kelebk"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/tauch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/touch_app"
                />


        </LinearLayout>



</RelativeLayout>